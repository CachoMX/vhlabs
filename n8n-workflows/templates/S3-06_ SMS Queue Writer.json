    {
      "parameters": {
        "jsCode": "const contact = $input.first().json;\nconst distributionPlan = $('Start').first().json;\n\n// Build SMS message from best hook or content description\nconst message = distributionPlan.best_hook || `Check out: ${distributionPlan.content_title}. ${distributionPlan.source_url}`;\n\n// Truncate to 160 characters for SMS\nconst smsMessage = message.length > 160 ? message.substring(0, 157) + '...' : message;\n\nreturn {\n  json: {\n    content_id: distributionPlan.content_id,\n    ghl_contact_id: contact.ghl_id,\n    contact_sync_id: contact.id,\n    channel: 'sms',\n    message_type: distributionPlan.is_primary ? 'primary_distribution' : 'secondary_distribution',\n    message_content: smsMessage,\n    status: 'queued',\n    segment_slug: distributionPlan.segment_slug\n  }\n};"
      },
      "id": "a94f0d8f-6ba5-4ad1-814f-fb34413b11a4",
      "name": "Build SMS Message",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        224,
        0
      ]
    },
