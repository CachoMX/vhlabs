        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "supabaseApi",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Prefer",
              "value": "return=representation"
            }
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"content_id\": \"{{ $json.content_id }}\",\n  \"ghl_contact_id\": \"{{ $json.ghl_contact_id }}\",\n  \"contact_sync_id\": \"{{ $json.contact_sync_id }}\",\n  \"channel\": \"sms\",\n  \"message_type\": \"{{ $json.message_type }}\",\n  \"message_content\": {{ JSON.stringify($json.message_content) }},\n  \"status\": \"queued\"\n}",
        "options": {}
