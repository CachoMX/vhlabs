        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"model\": \"claude-sonnet-4-20250514\",\n  \"max_tokens\": 4096,\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": {{ JSON.stringify($node['Get Content Agent Prompt'].json[0]?.content + '\\n\\nTranscript:\\n' + $node['Merge'].json.transcript) }}\n    }\n  ]\n}",
